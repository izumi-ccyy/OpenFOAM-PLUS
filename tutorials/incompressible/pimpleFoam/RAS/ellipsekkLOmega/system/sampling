planes
{
    type            surfaces;
    libs            ("libsampling.so");

        // Time control etc
    ${_visualization};

    fields          ( p U );

    // surfaceFormat   vtk;
    surfaceFormat   none;

    store           true;

    interpolationScheme cellPoint;

    _plane
    {
        type        plane; //cuttingPlane;
        planeType   pointAndNormal;
        interpolate false;

        pointAndNormalDict
        {
            point   (0 0 0);
            normal  (1 0 0);
        }
    }

    surfaces
    {
        plane0
        {
            ${_plane}
            pointAndNormalDict
            {
                point   (0 0 0);
            }
        }

        plane1
        {
            ${_plane}
            pointAndNormalDict
            {
                point   (-0.1 0 0);
            }
        }
    }

    #remove _plane
}


